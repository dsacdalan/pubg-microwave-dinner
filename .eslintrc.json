{
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console" : "warn",
        "no-unused-vars" : [
            "warn",
            {
                "args": "all"
            }
        ]
    }
}